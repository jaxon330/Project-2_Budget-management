
<div class="container">
    <h1 class="addAndEdit">Record detail</h1>
    <form action="/expenses/<%= expense.id %>?_method=PUT " method="post">
        <!-- Date -->
        <div class="form-group">
            <label for="date">Date</label>
            <p class="input"><%= expense.date.toISOString().split('T')[0] %> %></p>
        </div>
        <!-- Category -->
        <div class="form-group">
            <label for="category">Category</label>
            <p class="input"><%= expense.category %></p>

        </div>

        
        <!-- Amount -->
        <div class="form-group">
            <label for="amount">Amount</label>
            <p class="input">$<%= expense.amount %></p>
        </div>


        <!-- Description -->
        <div class="form-group">
            <label for="description">Description</label>
            <p class="input"><%= expense.description %></p>
        </div>

        <a href="/expenses"><button class="btn btn-info" type="button">Back</button></a>
        <a class="btn btn-warning" href="/expenses/<%= expense.id %>/edit ">Manage</a>
        <!-- Delete button -->
        <form class="form d-inline" action="/expenses/<%= expense.id %>?_method=DELETE " method="post">
            <a href="/expenses"><button class="btn btn-danger" type="submit">Remove</button></a>
        </form>
    </form>
</div>




