
<div class="container mt-5">
    <h1 class="addAndEdit">Add New Record</h1>
    <form action="/expenses" method="post">
        
        <!-- Date -->
        <div class="form-group">
            <label for="date">Date</label>
            <input type="date" class="form-control" id="date" name="date" 
                placeholder="$">
        </div>
        <!-- Category -->
        <div class="form-group">
            <label for="category">Category</label>
            <select class="form-control custom-select" id="category" name="category">
                <option disabled selected >Choose...</option>
                <option value="Income">Income</option>
                <option value="Housing">Housing</option>
                <option value="Food & Drinks">Food & Drinks</option>
                <option value="Transportation">Transportation</option>
                <option value="Vehicle">Vehicle</option>
                <option value="Shopping">Shopping</option>
                <option value="Life & Family ">Life & Family</option>
                <option value="Communication">Communication</option>
                <option value="Financial expenses">Financial expenses</option>
                <option value="Others">Others</option>
            </select>
        </div>

        
        <!-- Amount -->
        <div class="form-group">
            <label for="amount">Amount</label>
            <input type="number" class="form-control" id="amount" name="amount" step="0.01" min="0" 
                placeholder="$">
        </div>


        <!-- Description -->
        <div class="form-group">
            <label for="description">Description</label>
            <textarea class="form-control" name="description" id="description" placeholder="Leave a note here" rows="4"></textarea>
        </div>

        <a href="/expenses"><button class="btn btn-info" type="button">Back</button></a> 
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>